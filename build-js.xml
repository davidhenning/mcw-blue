<?xml version="1.0" encoding="UTF-8"?>
<project name="mcw-blue JS builder" default="uglifyjs">
    <target name="uglifyjs">
        <delete includeemptydirs="true">
            <fileset dir="${basedir}/js/production" includes="**/*" defaultexcludes="false" />
        </delete>
        <copy todir="${basedir}/js/production" includeEmptyDirs="true">
            <fileset dir="${basedir}/js/source"/>
        </copy>

        <apply executable="uglifyjs.cmd" parallel="false" verbose="true">       
            <fileset dir="${basedir}/js/production" />
            <arg line="--overwrite" />              
            <srcfile />
        </apply>               
    </target>
</project>